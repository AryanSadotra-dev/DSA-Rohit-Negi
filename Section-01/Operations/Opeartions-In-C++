"Hello good morning kaise ho aap sab log?"

"Aaj ka topic bahut IMPORTANT hai,
 kyunki programming ka control OPERATORS se aata hai."

====================================================================
*/

#include <iostream>
using namespace std;

int main()
{
    /*
    ============================================================
    1Ô∏è‚É£ WHAT IS AN OPERATOR?
    ============================================================

    Sir:
    "Operator wo hota hai jo OPERATION karwata hai."

    Example:
    2 + 3 ‚Üí + is operator
    a = 10 ‚Üí = is operator

    ============================================================
    */

    /*
    ============================================================
    2Ô∏è‚É£ TYPES OF OPERATORS (BIG PICTURE)
    ============================================================

    1. Arithmetic
    2. Relational (Comparison)
    3. Logical
    4. Assignment
    5. Unary
    6. Bitwise
    7. Ternary

    ============================================================
    */

    /*
    ============================================================
    3Ô∏è‚É£ ARITHMETIC OPERATORS
    ============================================================
    +  -  *  /  %
    ============================================================
    */

    int a = 13, b = 2;
    cout << a + b << endl;   // 15
    cout << a - b << endl;   // 11
    cout << a * b << endl;   // 26
    cout << a / b << endl;   // 6 (integer division)
    cout << a % b << endl;   // 1

    /*
    Sir:
    "Int / Int ‚Üí Int"
    "Float involved ‚Üí Float output"
    */

    cout << 13.0 / 2 << endl;   // 6.5


    /*
    ============================================================
    4Ô∏è‚É£ UNARY OPERATORS
    ============================================================
    ++  --
    ============================================================
    */

    int x = 10;

    cout << x++ << endl; // Post-increment ‚Üí prints 10, x=11
    cout << ++x << endl; // Pre-increment ‚Üí x=12, prints 12

    /*
    Sir:
    "POST: pehle kaam, baad me update"
    "PRE : pehle update, baad me kaam"
    */


    /*
    ============================================================
    5Ô∏è‚É£ RELATIONAL (COMPARISON) OPERATORS
    ============================================================
    ==  !=  >  <  >=  <=
    Output ‚Üí 0 or 1
    ============================================================
    */

    cout << (5 > 3) << endl;     // 1
    cout << (5 == 3) << endl;    // 0
    cout << (5 != 3) << endl;    // 1


    /*
    ============================================================
    6Ô∏è‚É£ LOGICAL OPERATORS
    ============================================================
    &&   ||   !
    ============================================================
    */

    cout << (5 > 3 && 10 > 7) << endl; // 1
    cout << (5 > 3 || 10 < 7) << endl; // 1
    cout << !(5 > 3) << endl;          // 0

    /*
    Short-circuit:
    AND ‚Üí first false stops
    OR  ‚Üí first true stops
    */


    /*
    ============================================================
    7Ô∏è‚É£ ASSIGNMENT OPERATORS
    ============================================================
    =  +=  -=  *=  /=  %=
    ============================================================
    */

    int y = 10;
    y += 5;   // y = y + 5 ‚Üí 15
    y -= 3;   // 12
    y *= 2;   // 24
    y /= 4;   // 6

    cout << y << endl;


    /*
    ============================================================
    8Ô∏è‚É£ BITWISE OPERATORS (MOST MISSED PART)
    ============================================================
    &  |  ^  ~  <<  >>
    ============================================================
    */

    /*
    Binary:
    5 ‚Üí 0101
    3 ‚Üí 0011
    */

    cout << (5 & 3) << endl; // 1
    cout << (5 | 3) << endl; // 7
    cout << (5 ^ 3) << endl; // 6
    cout << (~5) << endl;    // -6

    cout << (3 << 1) << endl; // 6 (multiply by 2)
    cout << (6 >> 1) << endl; // 3 (divide by 2)

    /*
    Sir:
    "<< = multiply by 2"
    ">> = divide by 2"
    "Negative behavior = compiler dependent"
    */


    /*
    ============================================================
    9Ô∏è‚É£ TERNARY OPERATOR (?:) ‚Äî COMPLETELY MISSING EARLIER
    ============================================================
    */

    int age = 20;
    (age >= 18) ? cout << "Adult\n" : cout << "Minor\n";


    /*
    ============================================================
    üîü OPERATOR PRECEDENCE & ASSOCIATIVITY
    ============================================================

    Highest ‚Üí Lowest (simplified)

    1. () 
    2. ++ --
    3. * / %
    4. + -
    5. < > <= >=
    6. == !=
    7. &&
    8. ||
    9. =

    Associativity:
    Mostly Left ‚Üí Right
    Assignment = Right ‚Üí Left

    ============================================================
    */

    /*
    ============================================================
    1Ô∏è‚É£1Ô∏è‚É£ FINAL SIR WORDS
    ============================================================

    "Operator yaad nahi karne,
     samajhne hote hain."

    "Precedence computer ke liye rules hain,
     tumhare liye logic."

    "Next class:
     Loops + Operator based questions."

    "Jai Hind üáÆüá≥ Jai Bharat üáÆüá≥"

    ============================================================
    */

    return 0;
}
